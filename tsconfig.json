{
  "compilerOptions": {
    "lib" : [
      "DOM"
    ],
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    // "module": "es2015",
    "sourceMap": false,
    "baseUrl": "./",
    "paths":{
      "@uniss" : [ "src/@uni/@styles/var" ],
      
      "@appComps" : [ "src/app/appComps" ],
      "@appComps/*" : [ "src/app/appComps/*" ]
    },
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration":true,

    "allowJs": true,
    "declaration": false,
    // "emitDeclarationOnly": true,
    "outDir": "./dist",

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}